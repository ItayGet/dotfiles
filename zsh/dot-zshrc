# Set custom prompt
autoload -U colors && colors
PS1="%B%{$fg[red]%}[%{$fg[yellow]%}%n%{$fg[green]%}@%{$fg[blue]%}%M %{$fg[magenta]%}%~%{$fg[red]%}]%{$reset_color%}$%b "

autoload -Uz compinit
compinit
zstyle ':completion:*' menu select

# Aliases
alias ls='ls --color'
alias grep='grep --color'
alias dup='urxvt -e ranger &;disown'
alias vim='nvim'
alias v='nvim'
alias pc='pacman'
alias y='yay'
alias ys='yay -S'
alias pcs='sudo pacman -S'
alias pcr='sudo pacman -Rsn'
alias syu='sudo pacman -Syu'
alias grepdir='grep -iHnr'
alias s='sudo'

# Aliases for systemctl
alias sd='sudo systemctl' # Systemd
alias sdr='sd start' # Run
alias sdq='sd stop' # Quit
alias sdr='sd restart'
alias sdi='sd status' # Info
alias sdh='sd hibernate'


# Setting up history
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000

# Include hidden files in autocomplete:
_comp_options+=(globdots)

export PATH=~/prm/scripts:$PATH

export VISUAL=nvim
export EDITOR=nvim

# Syntax highlighting, must be last
source /usr/share/zsh/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
