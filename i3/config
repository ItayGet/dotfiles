#fonts
set $font hack
set $font-size 10

set $mod Mod4

# set colors,
# used for setting border colors
set $c-focused #5e81ac
set $c-ufocused  #81a1c1
set $c-urgent #8fbcbb
set $c-indicator #88c0d0
set $w #FF0000


set $c-focused #0000FF
set $c-ufocused  #00FFFF
set $c-urgent #FF0000
set $c-indicator #FFFFFF
